{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["prettier", "airbnb-base"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "quotes": "off",
    "arrow-parens": "off",
    "comma-dangle": "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80
      }
    ]
  }
}
